{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts",
    "tsx"
  ],
  "moduleDirectories": [
    "node_modules"
  ],
  "rootDir": "./",
  "testMatch": [
    "<rootDir>/src/**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePathIgnorePatterns": [
    "<rootDir>/dist/"
  ],
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "setupFiles": [
    "<rootDir>/src/setupTests.ts"
  ]
}
